  function joinClauses(type, first, rest) {
    if (first.type === 'fact' && rest.length === 1 && (rest[0].type === 'conjunction' || rest[0].type === 'disjunction')) {
      rest[0].clauses.unshift(first);
      return rest[0];
    }
    return {
